@model List<Book>
@{
    ViewData["Title"] = "فهرست کتاب ها";
}
<div class="d-flex mt-5">
    <div>
        <table class="table table-striped table-active">
            <thead>
                <tr>
                    <th>#</th>
                    <th>عنوان</th>
                    <th>توضیحات</th>
                    <th>نویسنده</th>
                    <th>وضعیت امانت</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Author</td>
                        <td>@(item.Borrower is null ? "موجود در مخزن" : "در امانت")</td>
                    <td>
                        <div class="d-flex justify-content-center gap-1">
                            <div>
                                <a asp-controller="Books" action="Delete">
                                    <input type="button" class="btn btn-danger" value="D">
                                </a>
                            </div>
                            <div>
                                <a asp-controller="Books" action="Edit">
                                    <input type="button" class="btn btn-info" value="E">
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>